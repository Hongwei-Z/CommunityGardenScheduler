<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".task_view_list.TaskRegisterDummyPage">


    <Button
            android:id="@+id/registerButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:text="Register"
            app:layout_constraintEnd_toEndOf="@+id/editButton"
            app:layout_constraintStart_toStartOf="@+id/editButton"
            app:layout_constraintTop_toBottomOf="@+id/editButton"/>

    <Button
            android:text="Edit"
            android:layout_width="98dp"
            android:layout_height="45dp"
            android:id="@+id/editButton"
            app:layout_constraintBottom_toTopOf="@+id/registerButton"
            android:onClick="onEdit"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tempTaskTitle"
            app:layout_constraintStart_toStartOf="@+id/tempTaskTitle"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/tempTaskTitle"
            app:layout_constraintHorizontal_bias="0.47"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tempTaskTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="tempTaskTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/title"
            app:layout_constraintBottom_toTopOf="@+id/editButton"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="120dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>