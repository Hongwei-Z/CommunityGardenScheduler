<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addTaskActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_task.CreateTaskActivity">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/redhatdisplay"
        android:text="@string/create_task"
        android:textColor=" #64CB3F"
        android:textSize="36sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/textview_shape"
        android:ems="10"
        android:fontFamily="@font/redhatdisplay"
        android:hint="@string/title_hint"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="320dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:background="@drawable/textview_shape"
        android:ems="10"
        android:fontFamily="@font/redhatdisplay"
        android:hint="@string/description_hint"
        android:paddingStart="10dp"
        android:inputType="textMultiLine"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonPriority1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="450dp"
        android:background="@color/colorPriority1"
        android:onClick="onPriorityCheck"
        android:text="@string/_1"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonPriority2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="112.5dp"
        android:layout_marginTop="450dp"
        android:background="@color/colorPriority2"
        android:onClick="onPriorityCheck"
        android:text="@string/_2"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonPriority3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="450dp"
        android:background="@color/colorPriority3"
        android:onClick="onPriorityCheck"
        android:text="@string/_3"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonPriority4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="112.5dp"
        android:background="@color/colorPriority4"
        android:onClick="onPriorityCheck"
        android:text="@string/_4"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonPriority5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="45dp"
        android:background="@color/colorPriority5"
        android:onClick="onPriorityCheck"
        android:text="@string/_5"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editLocation"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="360dp"
        android:background="@drawable/textview_shape"
        android:ems="10"
        android:fontFamily="@font/redhatdisplay"
        android:hint="@string/location_hint"
        android:paddingStart="10dp"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/buttonConfirmAdd"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/positive_button_shape"
        android:fontFamily="@font/redhatdisplay_bold"
        android:onClick="onConfirm"
        android:text="@string/confirm_add_task"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textErrorText"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:text="@string/error_text"
        android:fontFamily="@font/redhatdisplay"
        android:textAppearance="@style/InputHint"
        android:textColor="#F44336"
        android:textSize="18sp" />

</RelativeLayout>