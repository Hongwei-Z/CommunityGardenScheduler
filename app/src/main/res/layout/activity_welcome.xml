<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome">

    <TextView
        android:id="@+id/welcome_title"
        android:layout_width="378dp"
        android:layout_height="0dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/redhatdisplay"
        android:gravity="center"
        android:text="Welcome!"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/createTasktBtn_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#5E5E5E"
            android:fontFamily="@font/redhatdisplay"
            android:onClick="createTaskOpen_onclick"
            android:text="Create Task"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signOutBtn_welcome2"
            android:layout_marginTop="10dp"/>

    <Button
            android:id="@+id/signOutBtn_welcome2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#5E5E5E"
            android:fontFamily="@font/redhatdisplay"
            android:onClick="signOut_onclick"
            android:text="Sign Out"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/taskHistoryBtn"
            android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/allTaskListBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#5E5E5E"
        android:fontFamily="@font/redhatdisplay"
        android:onClick="allTaskListOpen_onclick"
        android:text="All Tasks"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_title" />

    <Button
        android:id="@+id/myTasksBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#5E5E5E"
        android:fontFamily="@font/redhatdisplay"
        android:onClick="myTaskListOpen_onclick"
        android:text="My Tasks"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openTasksBtn" />

    <Button
        android:id="@+id/openTasksBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#5E5E5E"
        android:fontFamily="@font/redhatdisplay"
        android:onClick="openTaskListOpen_onclick"
        android:text="Open Tasks"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allTaskListBtn" />

    <Button
        android:id="@+id/taskHistoryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#5E5E5E"
        android:fontFamily="@font/redhatdisplay"
        android:onClick="taskHistoryListOpen_onclick"
        android:text="Task History"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myTasksBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>