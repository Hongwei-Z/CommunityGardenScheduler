<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome">

    <TextView
        android:id="@+id/welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/redhatdisplay"
        android:gravity="center"
        android:text="@string/welcome"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signOutBtn_welcome2"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/negative_button_shape"
        android:fontFamily="@font/redhatdisplay"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="true"
        android:onClick="signOut_onclick"
        android:text="@string/sign_out"/>

    <Button
        android:id="@+id/allTaskListBtn"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="240dp"
        android:background="@drawable/positive_button_shape"
        android:fontFamily="@font/redhatdisplay"
        android:onClick="allTaskListOpen_onclick"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="@string/all_tasks"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/myTasksBtn"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="240dp"
        android:background="@drawable/positive_button_shape"
        android:fontFamily="@font/redhatdisplay"
        android:onClick="myTaskListOpen_onclick"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="@string/my_tasks"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/openTasksBtn"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/positive_button_shape"
        android:fontFamily="@font/redhatdisplay"
        android:onClick="openTaskListOpen_onclick"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="@string/open_tasks"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/taskHistoryBtn"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/positive_button_shape"
        android:fontFamily="@font/redhatdisplay"
        android:onClick="taskHistoryListOpen_onclick"
        android:paddingLeft="3dp"
        android:paddingTop="4dp"
        android:paddingRight="3dp"
        android:text="@string/task_history"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weatherCityTxt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textSize="23sp"
        android:textStyle="bold"
        android:fontFamily="@font/redhatdisplay"
        android:text="@string/current_weather_in" />

    <TextView
        android:id="@+id/weatherDescTxt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/redhatdisplay"
        android:text="@string/description"/>

    <TextView
        android:id="@+id/weatherTempTxt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/redhatdisplay"
        android:text="@string/temperature" />

    <TextView
        android:id="@+id/weatherHumidTxt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/redhatdisplay"
        android:text="@string/humidity" />

    <TextView
        android:id="@+id/weatherWindTxt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/redhatdisplay"
        android:text="@string/wind_speed" />

    <ImageView
        android:id="@+id/weatherimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>